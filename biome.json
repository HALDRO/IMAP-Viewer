{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error"
      },
      "style": {
        "useTemplate": "error",
        "useConst": "error",
        "useImportType": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noConsoleLog": "warn"
      },
      "nursery": {
        "useImportRestrictions": "off"
      }
    },
    "ignore": [
      ".vite/**/*",
      "dist/**/*",
      "dist-*/*",
      "build/**/*",
      "out/**/*",
      "iview-*/**/*",
      "node_modules/**/*",
      "**/*.js",
      "**/*.js.map",
      "src/vite-env.d.ts",
      "src/types/electron-squirrel-startup.d.ts",
      "src/shared/types/electron.d.ts",
      "_gg.ts",
      "_build.bat",
      "_start.bat",
      "forge.env.d.ts",
      "vite.*.config.*",
      "launcher/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": [
      ".vite/**/*",
      "dist/**/*",
      "dist-*/*",
      "build/**/*",
      "out/**/*",
      "iview-*/**/*",
      "node_modules/**/*",
      "launcher/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "*.ts",
      "*.tsx",
      "*.js",
      "*.mjs"
    ],
    "ignore": [
      ".vite/**/*",
      "dist/**/*",
      "dist-*/*",
      "build/**/*",
      "out/**/*",
      "iview-*/**/*",
      "node_modules/**/*",
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map",
      "_gg.ts",
      "launcher/**/*"
    ]
  }
}
